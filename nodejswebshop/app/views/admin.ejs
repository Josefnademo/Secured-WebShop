<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/style.css" />
    <title>Admin - Recherche d'utilisateur</title>
  </head>
  <body>
    <h1>Page Admin</h1>

    <form class="admin" action="/search-user" method="POST">
      <label for="username">Rechercher un utilisateur :</label>
      <input type="text" id="username" name="username" required />
      <button type="submit">Rechercher</button>
    </form>

    <div class="admin">
      <% if (error) { %>
      <p style="color: red"><%= error %></p>
      <% } %> <% if (users && users.length > 0) { %>
      <h2>Informations de l'utilisateur :</h2>
      <% users.forEach(function(user) { %>
      <div>
        <p><strong>ID :</strong> <%= user.id %></p>
        <p><strong>Nom d'utilisateur :</strong> <%= user.username %></p>
        <p><strong>Rôle :</strong> <%= user.role %></p>
        <p><strong>Créé le :</strong> <%= user.created_at %></p>
        <p><strong>Dernière mise à jour :</strong> <%= user.updated_at %></p>
        <hr />
      </div>
      <% }); %> <% } else { %>
      <p>Aucun utilisateur trouvé.</p>
      <% } %>
    </div>

    <div class="registration">
      <a href="/admin"><h2>retour à la page d'administration</h2></a>
      <a href="/home"><h2>retour à la page d'accueil</h2></a>
      <a href="/login"><h2>retour à la page de login</h2></a>
      <a href="/details"><h2>retour à la page des details</h2></a>
    </div>
  </body>
</html>
